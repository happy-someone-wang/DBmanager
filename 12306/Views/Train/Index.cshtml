    <script>
        function ser(){
            window.location.href=encodeURI("Train/Buy?"+document.getElementById("bef").value+"&"+document.getElementById("bef2").value+"&"+document.getElementsByTagName("select")[0].value
            +"&"+document.getElementsByName("datem")[0].value+"&"+document.getElementsByName("dated")[0].value);
