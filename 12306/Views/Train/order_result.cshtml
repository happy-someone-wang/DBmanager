@model ReturnModels.Train_Result_Model
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .content {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 900px;
            background-color: #fff;
        }

        .tip {
            border: #1678be;
        }

            .tip div {
                font-size: 20px;
                margin-bottom: 5px;
            }

        .t-succ {
            border-radius: 5px;
            padding: 15px 15px;
            background-color: rgb(224, 247, 224);
            /* display: none; */
        }

        .t-fail {
            border-radius: 5px;
            padding: 15px 15px;
            background-color: #ffebda;
            /* display: none; */
        }

        .orders {
            width: 900px;
            border: 1px solid #1678be; /*边框*/
            border-radius: 5px 5px 0 0; /*边框圆角*/
            background-color: #fff;
        }

        .orders-hd {
            height: 40px;
            line-height: 38px;
            color: #fff;
            padding-left: 20px;
            font-size: 18px;
            position: relative;
            background-image: linear-gradient(#9198e5, #1678be);
        }

        .orders-bd {
            padding: 15px 15px;
            position: relative;
            border-top: 0;
        }

        table {
            margin: auto;
            margin-top: 10px;
            padding: 10px;
            width: 100%;
            background-color: lavender;
            border-radius: 5px;
            font-size: 14px;
        }

        th {
            padding-bottom: 5px;
            border-bottom: 1px solid #999;
        }

        td {
            width: 180px;
            padding-top: 5px;
        }

        td, th {
            padding-left: 5px;
            text-align: left;
        }

        ;
    </style>
</head>
<body>
    <div class="content">
        @{
            if (Model.Order_info.Count>0)
            {
                <div class="tip t-succ">

                    <div style="color: #26a306;">
                        <strong>订票已成功！</strong>
                    </div>
                </div>
            }
            else
            {
                <div class="tip t-fail">
                    <div style="color: red;">
                        <strong>订票失败！</strong>
                    </div>
                    请重新操作！
                </div>
            }
        }
        <br>
        <div class="orders">
            <div class="orders-hd">订单信息</div>
            <div class="orders-bd">
                <div>
                    &nbsp;&nbsp;
                    <strong style="color: #fb7403;">@Model.Order_info[0].TrainID</strong>
                    次&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <strong style="color: #fb7403;">@Model.Start_station</strong>
                    站(
                    <strong>
                        <span>@Model.Order_info[0].LeavingTime</span>
                    </strong>
                    )—
                    <strong>
                        <span style="color: #fb7403;">@Model.End_station</span>
                    </strong>
                    站(
                    <strong>
                        <span>@Model.Order_info[0].ArriveTime</span>
                    </strong>
                    )
                    <button type="button" onclick="location.href=('/Train/Index')">返回首页</button>
                </div>
                <table>
                    <tbody>
                        <tr>
                            <th style="width: 40px;">
                                <strong>订单号</strong>
                            </th>
                            <th>
                                <strong>姓名</strong>
                            </th>
                            <th>
                                <strong>车厢</strong>
                            </th>
                            <th>
                                <strong>席位号</strong>
                            </th>
                            <th>
                                <strong>票价（元）</strong>
                            </th>
                        </tr>
                        @{
                            if (Model != null)
                            {
                                for (int i = 0; i < Model.Order_info.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Order_info[i].OrderID</td>
                                        <td>@Model.Passenger_name[i]</td>
                                        <td>
                                            <span>@Model.Order_info[i].CarriageNo</span>
                                        </td>
                                        <td>@Model.Order_info[i].SeatNo 座</td>
                                        <td>@Model.Order_info[i].OrderValue</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>